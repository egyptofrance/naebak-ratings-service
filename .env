# خدمة التقييمات - إعدادات البيئة
DEBUG=True
SECRET_KEY=django-insecure-ratings-service-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///db.sqlite3
DATABASE_NAME=naebak_ratings
DATABASE_USER=naebak_user
DATABASE_PASSWORD=secure_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# إعدادات Redis
REDIS_URL=redis://localhost:6379/2
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2

# إعدادات الخدمة
SERVICE_NAME=naebak-ratings-service
PORT=8005
SERVICE_VERSION=1.0.0

# إعدادات التقييمات
MIN_RATING=1
MAX_RATING=5
ALLOW_ANONYMOUS_RATINGS=false
REQUIRE_COMMENT=false
MAX_COMMENT_LENGTH=500

# إعدادات الأمان
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# إعدادات التسجيل
LOG_LEVEL=INFO
LOG_FILE=ratings_service.log

# إعدادات المراقبة
MONITORING_ENABLED=false
HEALTH_CHECK_INTERVAL=60
