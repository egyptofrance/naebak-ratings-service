# مثال على ملف متغيرات البيئة للتطوير المحلي
# انسخ هذا الملف إلى .env وقم بتعديل القيم حسب بيئتك

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/naibak_dev
# أو استخدم SQLite للتطوير السريع:
# DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AI Governance Settings
AI_GOVERNANCE_ENABLED=True
MINIMUM_TEST_COVERAGE=90
MAX_AI_REQUESTS_PER_MINUTE=10
AI_RESPONSE_MAX_TOKENS=1000

# External Services
OPENAI_API_KEY=your-openai-api-key-here
SENTRY_DSN=your-sentry-dsn-here

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Settings (للتطوير)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Logging Level
LOG_LEVEL=DEBUG

# File Storage (للتطوير المحلي)
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# Google Cloud Settings (للنشر)
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=your-storage-bucket

# Monitoring and Observability
PROMETHEUS_ENABLED=True
GRAFANA_ENABLED=True
ELK_ENABLED=False

# Testing Settings
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test_naibak
PYTEST_TIMEOUT=300

# Development Tools
DJANGO_EXTENSIONS_ENABLED=True
DEBUG_TOOLBAR_ENABLED=True
